---
parserOptions:
  ecmaVersion: 6
extends:
- eslint:recommended
env:
  node: true
rules:
  wrap-iife:
  - 2
  - inside
  eqeqeq: 2
  no-use-before-define:
  - 2
  - nofunc
  no-unused-vars:
  - 2
  - vars: local
    args: all
  no-multi-str: 2
  no-irregular-whitespace: 2
  semi:
  - 2
  - always
  indent:
  - 2
  - tab
  - SwitchCase: 1
  linebreak-style: 0
  eol-last: 2
  no-undef:
    - 2
    - typeof: true
